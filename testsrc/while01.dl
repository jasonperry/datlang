module While01 = 

import Stdio;

begin 

var i = 14;
var j: Int = 0;

while (i >= 0) loop
  j = 2*i+1;  (* declaring j each time through eats memory. Not good. *)
              (* could the LLVM optimizer fix it? *)
  Stdio.printInt(i);
  i = i - 1;
endloop

Stdio.printInt(i);
Stdio.printInt(j);

end

end While01